<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@id/layout_navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:baselineAligned="false"
        android:orientation="horizontal"

        android:visibility="gone">

    <RelativeLayout
            android:id="@+id/nav_locate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_padding"
            android:layout_marginLeft="@dimen/side_padding"
            android:layout_weight="1"
            android:background="@color/navigation_selected">

        <ImageView
                android:id="@+id/ic_page_locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_page_locate" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_page_locate"
                android:layout_centerHorizontal="true"
                android:text="@string/page_locate"
                android:textColor="@color/layout_white"
                android:textSize="@dimen/nav_text_size" />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/side_padding"
            android:layout_marginRight="@dimen/side_padding"
            android:layout_weight="1">

        <ImageView
                android:id="@+id/ic_page_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_page_history" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_page_history"
                android:layout_centerHorizontal="true"
                android:text="@string/page_history"
                android:textColor="@color/layout_white"
                android:textSize="@dimen/nav_text_size" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/side_padding"
            android:layout_marginRight="@dimen/side_padding"
            android:layout_weight="1">

        <ImageView
                android:id="@+id/ic_page_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_page_logout" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_page_logout"
                android:layout_centerHorizontal="true"
                android:text="@string/page_logout"
                android:textColor="@color/layout_white"
                android:textSize="@dimen/nav_text_size" />

    </RelativeLayout>

</LinearLayout>